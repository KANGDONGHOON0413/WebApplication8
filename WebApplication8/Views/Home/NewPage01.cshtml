@model WebApplication8.Models.User

<form method="post" asp-controller="Home" asp-action="NewPage01">
    <div>
        <h1>로그인 화면</h1>
    </div>
    <div class="form-group">
        <label>ID:  </label>
        <input class="form-control" asp-for="UserID" type="text" />
        <span class="alert-danger" asp-validation-for="UserID"></span>
    </div>
    <div class="form-group">
        <label>PW:  </label>
        <input class="form-control" asp-for="UserPW" type="password"/>
        <span class="alert-danger"asp-validation-for="UserPW"></span>
    </div>
    <div class="form-group">
        <button class="btn-primary" type="submit"> 로그인 </button>
    </div>
</form>
