@model WebApplication8.Models.LoginCheck

<form method="post" asp-controller="MyInfo" asp-action="Login">
    <div>
        <h1>로그인</h1>
    </div>
    <div class="form-group col-lg-8">
        <label>아이디</label>
        <input type="text" asp-for="UserID" placeholder="ID" />
    </div>
    <div class="form-group col-lg-8">
        <label>패스워드</label>
        <input type="password" asp-for="UserPW" placeholder="PW" />
    </div> 
    <div class="form-group">
        <button class="btn-success" type="submit">로그인</button>
    </div>

</form>